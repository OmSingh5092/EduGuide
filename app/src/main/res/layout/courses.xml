<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    app:cardElevation="5dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/course_recycler_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/course_recycler_title"
            style="@style/NormalTextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="Title"
            app:layout_constraintStart_toEndOf="@+id/course_recycler_image"
            app:layout_constraintTop_toTopOf="@+id/course_recycler_image" />

        <TextView
            android:id="@+id/course_recycler_des"
            style="@style/NormalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/course_recycler_title"
            app:layout_constraintTop_toBottomOf="@+id/course_recycler_title" />

        <TextView
            android:id="@+id/courses_recycler_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/course_recycler_des"
            app:layout_constraintTop_toBottomOf="@+id/course_recycler_des" />

        <ImageButton
            android:id="@+id/courses_recycler_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round_corners_ripple"
            android:backgroundTint="@color/themeSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_recycler_des"
            app:srcCompat="@drawable/add_icon" />

        <ProgressBar
            android:id="@+id/courses_recycler_imageload"
            style="?android:attr/progressBarStyle"
            android:layout_width="41dp"
            android:layout_height="39dp"
            app:layout_constraintBottom_toBottomOf="@+id/course_recycler_image"
            app:layout_constraintEnd_toEndOf="@+id/course_recycler_image"
            app:layout_constraintStart_toStartOf="@+id/course_recycler_image"
            app:layout_constraintTop_toTopOf="@+id/course_recycler_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>